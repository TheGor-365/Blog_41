<div class="container mt-5 mb-5">
  <h2><%= @article.title %></h2>
</div>

<div class="container mb-5">
  <p><%= @article.text %></p>
</div>

<div class="container mt-5 mb-5">
  <h6>New comment</h6>
</div>

<div class="container">
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <%= f.submit %>
  <% end %>
</div>
